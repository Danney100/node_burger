<div class="container justify-content-center">
    <div class="row">
        <img src="assets/img/burger2.png">
    </div>

    <div class="row">
        <form class="add-burger-form">
            <div class="form-group">
                <label for="burg">Create a Burger</label>
                <input class="form-control" name="burger-name" id="burg" rows="3">
            </div>
            <button type="submit" class="btn btn-success" id="submit">Create!</button>
        </form>
    </div>

<div class="row">
        <div class="col-6 burgers">
            <div class=" title">
                <h2>Eat Da Burger!</h2>
            </div>
            <div class=" burger-list">
                <ol>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ol>
            </div>
        </div>
        <div class=" col-6 devoured">
            <div class="devoured-list ">
                <h3>Devoured Burgers:</h3>

                <ol>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers devoured=true}}
                    {{/if}}
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>

</div>